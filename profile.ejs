<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link rel="stylesheet" href="../stylesheets/profile.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  </head>
  <body>
    <div class="containerpers">
        <div class="cardpers">
          <div class="profile-picture">
            <img src="https://images.unsplash.com/photo-1704187508554-5f38dbbb3495?w=600&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxlZGl0b3JpYWwtZmVlZHwxOTh8fHxlbnwwfHx8fHw%3D" alt="Profile Picture">
          </div>
          <h2 class="name"><%=user.fullname%></h2>
          <h3 class="username">@<%=user.username%></h3>
          <p class="tagline">Keep going...</p>
          <p class="description">Lorem ipsum dolor sit amet consectetur adipisicing elit. Distinctio.</p>
          <a href="/logout" class="button">Logout</a>
          <form action="/upload", method = "post" enctype = "multipart/form-data">
            <input type="text" name = "filecaption" placeholder = "some caption">
            <input type="file" name = "file">
            <input type="submit">

          </form>
        </div>
    </div>
    <div class="container">
        <div class="cards flex">
            <!-- to show the uploaded images or posts in the profile section -->
            <% user.posts.forEach(function(post) {%>
                <div class="card" style="width: 18rem;">
                    <img src = "/images/uploads/<%= post.image%>" class="card-img-top" alt="...">
                    <div class="card-body">
                      <h5 class="card-title"><%=post.imageText%></h5>
                      <!-- <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                      <a href="#" class="btn btn-primary">Go somewhere</a> -->
                    </div>
                  </div>

            <% }) %>
        </div>

    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  </body>
</html>